<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/featured_item_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="15dp"
            android:src="@mipmap/ic_launcher_round"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/featured_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="category name"
            android:layout_margin="5dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:maxLines="2"
            android:maxLength="52"
            android:ellipsize="end"
            android:layout_gravity="center"
            android:layout_below="@+id/featured_item_image"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/featured_item_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 1000,00"
            android:layout_margin = "5dp"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_below="@+id/featured_item_text"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

</FrameLayout>